{% extends 'base.html.twig' %}

{% block title %}
	{{ 'Edit' | trans }}-{{ 'Module' | trans }}
{% endblock %}


{% block breadcrumbs %}
	<li class="breadcrumb-item">
		<a class="crumb crumb-link" href="{{ path('dashboard') }}">{{ 'Dashboard' | trans }}</a>
	</li>
	{% for crumb in module.editBreadcrumbs(app.user.language) %}
		{{ include('partials/breadcrumbs.html.twig') }}
	{% endfor %}
{% endblock %}

{% block body %}
	<div class="example-wrapper">
		<h1 class="title-css">{{ 'Edit Learning Module Translation' | trans }}</h1>
		<div class="example-wrapper">
			<section class="module-cube">
				{{ form_start(form) }}
				{{ form_row(form.title) }}
				{{ form_row(form.description,  {'attr': {'class': 'js-richtexteditor'}}) }}
				<button class="p-1 btn btn-skills button_8 buttonNavBox">{{ 'Save' | trans }}</button>
				{{ form_end(form) }}
			</section>
		</div>
	</div>

	<script src="/assets/js/ckeditor5/build/ckeditor.js"></script>
	<script src="/assets/js/l2g-ckeditor.js"></script>
{% endblock %}
