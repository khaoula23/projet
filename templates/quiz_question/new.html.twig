        <h1 class="mod-title">{{ 'New Question' | trans }}</h1>
    </div>
    <div class="example-wrapper">
    <h1>{{'Create new QuizQuestion for:'  | trans }}</h1>
    <h2>{{ quiz_question.quiz.chapter.trTitle(app.request.query.get('lang')) }}</h2>

    {{ include('quiz_question/_form.html.twig') }}

            <a class="" href="{{ path('quiz_show', {'id': quiz_question.quiz.id, 'lang': app.request.query.get('lang')}) }}">
