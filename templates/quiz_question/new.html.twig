{% extends 'base.html.twig' %}

{% block title %}{{'New QuizQuestion' | trans }}{% endblock %}

{% block breadcrumbs %}
        {% for crumb in quiz_question.getEditBreadcrumbs(app.user.language) %}
            {{ include('partials/breadcrumbs.html.twig') }}
        {% endfor %}
{% endblock %}

{% block body %}
